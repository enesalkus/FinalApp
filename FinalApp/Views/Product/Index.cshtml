@{
    ViewData["Title"] = "Product Page";
}

@model FinalApp.Models.Product

<div class="urun">
    <div class="urun-resim">
        <img style="width: 100%;" src="@Model.Resim" />
    </div>
    <div class="urun-icerik">
        <div class="urun-baslik">
            <div class="icerik-yazi"><b>@Model.Kategori</b></div>
            <div class="urun-isim icerik-yazi">@Model.Urun</div>
        </div>
        <br />
        <div class="urun-fiyat"><b>@Model.Fiyat</b></div>
        <button class="button">Sepete Ekle</button>
    </div>
</div>
<br style="clear:both;" />
<span>Alt Kısım</span>